@page
@model SportField.Models.Evento
@{
    ViewData["Title"] = "Crear Nuevo Evento";
}

<h2>Crear Nuevo Evento</h2>
<form method="post">
    <div class="form-group">
        <label for="NombreEvento">Nombre del Evento</label>
        <input asp-for="NombreEvento" class="form-control" />
    </div>
    <div class="form-group">
        <label for="IdCampo">Campo</label>
        <select asp-for="IdCampo" asp-items="Model.Campos" class="form-control">
            <option value="">Selecciona un campo</option>
        </select>
    </div>
    <div class="form-group">
        <label for="FechaEvento">Fecha del Evento</label>
        <input asp-for="FechaEvento" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HoraInicio">Hora Inicio</label>
        <input asp-for="HoraInicio" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label for="HoraFin">Hora Fin</label>
        <input asp-for="HoraFin" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Descripción">Descripción</label>
        <textarea asp-for="Descripción" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-page="/Eventos/Index" class="btn btn-secondary">Cancelar</a>
</form>
